<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    >


    <TextView
        android:id="@+id/txtWelcomeAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITMP-OGUN AYAZ"
        android:textSize="35sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        />
    <Button
        android:id="@+id/btnWelcomeRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/create_new_account"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"

        />
    <Button
        android:id="@+id/btnWelcomeLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GiriÅŸ Yap"
        android:background="@android:color/holo_purple"
        android:layout_above="@id/btnWelcomeRegister"
        android:layout_marginBottom="25dp"

        />
    <Button
        android:id="@+id/btnSensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensors"
        android:background="@android:color/holo_red_light"
        android:layout_above="@id/btnWelcomeLogin"
        android:layout_marginBottom="25dp"

        />
    <Button
        android:id="@+id/btnNotepad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notepad"
        android:background="@android:color/holo_blue_dark"
        android:layout_above="@id/btnSensors"
        android:layout_marginBottom="25dp"

        />
    <Button
        android:id="@+id/btnShared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shared Preference"
        android:background="@android:color/holo_green_dark"
        android:layout_above="@id/btnNotepad"
        android:layout_marginBottom="25dp"

        />
    <Button
        android:id="@+id/btnEmailSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Send"
        android:background="@android:color/holo_red_dark"
        android:layout_above="@id/btnShared"
        android:layout_marginBottom="25dp"

        />
    <Button
        android:id="@+id/btnRecylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecylerView"
        android:background="@android:color/holo_orange_light"
        android:layout_above="@id/btnEmailSend"
        android:layout_marginBottom="25dp"

        />




</RelativeLayout>